.toolbar
  position absolute
  top 0
  left 0
  width 100%
  height 35px
  box-shadow 0px 2px 5px 3px rgba(0,0,0,0.4);
  background gray

  .add-tag
    float left

  .upload-dialog
    float right
    margin: 5px 5px 0 0

.add-tag
  height 35px
  padding 5px 0 0 10px

  .add
    float left
    background-image url('/img/add.png')
    width 25px
    height 25px
    margin-right 5px
    padding 0

  input
    display block
    float left

.upload-dialog
  position relative
  width 25px
  height 25px
  overflow hidden

  .icon.upload
    float right
    width 25px
    height 25px
    border-radius 5px
    background-color rgba(0,0,0,.3)
    background-image url('/img/upload.png')
  
  input
    position absolute
    top 0
    left 0
    opacity 0 

  &:hover .icon.upload
    background-color rgba(0,0,0,.1)

