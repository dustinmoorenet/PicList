.login.form
  background grey
  border-top-left-radius 20px
  border-bottom-right-radius 5px
  border-bottom-left-radius 5px
  border-top-right-radius 5px

  header
    padding 0 10px
    margin-bottom 10px
    line-height 36px
    height 36px
    background white
    border-top-left-radius 20px
    border-top-right-radius 5px

    .title
      float left
      text-transform uppercase
      font-weight bold


  .form 
    padding 10px
    min-width 300px
    max-width 500px

    label
      display: inline-block;
      text-transform uppercase
      font-size .8em
      color white
      text-shadow -1px 1px 0 black
      width 90px

    input
      display: inline-block;
      font-size 1.2em
      margin 5px 0 20px

    .controls
      text-align right
