html
  margin 0
  padding 0
  font-family sans-serif

body {
  margin 0
  padding 0

  h1 {
    color: red;
  }
}

#drop_zone {
  width: 200px;
  height: 200px;
  border: solid 1px black;
}

.upload-drop
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background black
  opacity .75 
  color white
  text-align center

  > table
    width 100%
    height 100%
    border-spacing 20px

    .drop
      border solid 10px rgba(255,255,255,0.5)
      border-radius 6px 6px

      &.disabled
        visibility hidden

      &:hover, &.hover
        border-color rgba(255,255,255,0.9)

    .custom-drop
      height 33%

    .main-drop
      height 100%

    .column1
      width 20%

    .column2
      width 60%

    .column3
      width 20%


