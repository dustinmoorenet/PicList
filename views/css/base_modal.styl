.base-modal
  position absolute
  display table
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0,0,0,.75)

  .vertical-center
    width 100%
    height 100%
    display table-cell
    vertical-align middle

    .horizontal-center-outer
      position relative
      float right
      right 50%

      .horizontal-center-inner
        position relative
        float right
        right -50%

.message
  background lightgray
  padding 10px
  border-radius 10px
  min-width 200px

  > header
    text-align left

  .content
    padding 10px 0
    font-size .8em

  .buttons
    text-align right

    .btn
      display inline-block
      margin-left 10px
      &:first-child
        margin-left 0
